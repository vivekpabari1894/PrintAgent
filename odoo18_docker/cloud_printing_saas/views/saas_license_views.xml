<odoo>
    <record id="view_saas_license_form" model="ir.ui.view">
        <field name="name">saas.license.form</field>
        <field name="model">saas.license</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_key" string="Regenerate Key" type="object" confirm="Are you sure you want to regenerate the API Key? The old one will stop working."/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <title>
                        <h1><field name="name"/></h1>
                    </title>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="subscription_id"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="expiration_date"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_saas_license_tree" model="ir.ui.view">
        <field name="name">saas.license.list</field>
        <field name="model">saas.license</field>
        <field name="arch" type="xml">
            <list decoration-danger="state=='expired'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="expiration_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_saas_license" model="ir.actions.act_window">
        <field name="name">Cloud Printing Licenses</field>
        <field name="res_model">saas.license</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_saas_root" name="SaaS" sequence="10"/>
    <menuitem id="menu_saas_license" name="Licenses" parent="menu_saas_root" action="action_saas_license"/>
</odoo>
